<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.HotListMapper">

    <resultMap id="HotListMapper" type="com.tencent.wxcloudrun.model.HotList">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="brief" column="brief"/>
        <result property="times" column="times"/>
        <result property="likes" column="likes"/>
        <result property="typesId" column="types_id"/>
        <result property="createdAt" column="createdAt" javaType="java.time.LocalDateTime" />
        <result property="updatedAt" column="updatedAt" javaType="java.time.LocalDateTime"  />
    </resultMap>

    <select id="getHotList" resultMap="CareerSearchMapper" parameterType="java.lang.Integer">
        SELECT `id`, `title`, `brief`, `times`, `likes`, `typesId`
        FROM hot_list
        WHERE typesId = #{typeId}
    </select>

    <insert id="insertSearchRecord" parameterType="com.tencent.wxcloudrun.model.SearchList">
        INSERT INTO search_list(title,typesId) VALUES(#{title},#{typeId});
    </insert>

    <update id="updateHotListTimes" parameterType="java.lang.Integer">
        UPDATE hot_list
        SET times = times + 1
        WHERE id = #{docId}
    </update>

    <update id="updateHotListLikes" parameterType="java.lang.Integer">
        UPDATE hot_list
        SET likes = likes + 1
        WHERE id = #{docId}
    </update>

    <select id="getHotList" resultMap="CareerSearchMapper" parameterType="java.lang.Integer">
        SELECT `id`, `title`, `brief`, `times`, `likes`, `typesId`
        FROM hot_list
        WHERE typesId = #{typeId}
    </select>
</mapper>
